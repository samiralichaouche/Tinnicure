<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/Teal"
    tools:context="com.example.tinnicure.Main2Activity"
    android:weightSum="1">


    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frequency"
        android:max="20000"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="40dp"
        android:layout_marginTop="140dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_below="@+id/enter"
        android:layout_alignParentLeft="true"
        android:paddingTop="40dp"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+1"
        android:id="@+id/button"
        android:layout_alignTop="@+id/switch1"
        android:layout_toRightOf="@+id/space"
        android:layout_toEndOf="@+id/space"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+10"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+50"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="+100"
        android:id="@+id/button4"
        android:layout_alignBottom="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-1"
        android:id="@+id/button5"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-10"
        android:id="@+id/button6"
        android:layout_alignBottom="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-50"
        android:id="@+id/button7"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="-100"
        android:id="@+id/button8"
        android:layout_alignBottom="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Space
        android:layout_width="150px"
        android:layout_height="100px"
        android:id="@+id/space"
        android:layout_above="@+id/button5"
        android:layout_toRightOf="@+id/switch1"
        android:layout_toEndOf="@+id/switch1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frequency"
        android:id="@+id/enter"
        android:text="Enter Frequency(0-20000):"
        android:textStyle="bold"
        android:textSize="17sp"
        android:paddingTop="20dp" />

    <EditText
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:id="@+id/edittexts"
        android:layout_toRightOf="@+id/enter"
        android:layout_toEndOf="@+id/enter"
        android:inputType="number"
        android:layout_below="@+id/frequency"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/edittexts"
        android:layout_toEndOf="@+id/edittexts"
        android:layout_alignBottom="@+id/edittexts"
        android:text="Enter"
        android:id="@+id/enterbutton"
        android:onClick="onEnterButtonClick"
        />


</RelativeLayout>
