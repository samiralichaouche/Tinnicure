<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/Teal"
    tools:context="com.example.tinnicure.Module3Part2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="@color/White"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_view_mod3"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/backbuttonmod3"
        android:id="@+id/sv1"
        android:layout_below="@+id/image_view_mod3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/White"
                android:id="@+id/text_view_mod3_2"
                />
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:layout_below="@id/text_view_mod3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_mod4"
        />

    <ImageView
        android:layout_below="@id/text_view_mod3"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="100dp"
        android:id="@+id/image_view_mod3"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/text_view_mod3"
        android:layout_centerHorizontal="true"
        android:id="@+id/sv2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvmod3_5"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal|fill_horizontal"
                    android:textColor="@color/White"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="225dp"
                    android:id="@+id/ivmod3_3"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/backbuttonmod3"
        android:onClick="mod3Back"
        android:background="@color/White"
        android:textColor="@color/Teal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_view_mod3_3"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Next"
        android:id="@+id/nextbuttonmod3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="mod3Next"
        android:background="@color/White"
        android:textColor="@color/Teal"
        />
</RelativeLayout>
